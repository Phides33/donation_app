$('#q-form').html("<%= j (render 'form') %>");
$('#q-form').slideDown(350);
const i = $('.form-group').length;
let n = 1;
$('.form-group').hide();
$('.btn-success').hide();
$('.btn-default').hide();
$(`.q${n}`).show();
$('#next-question').click(function() {
  if (n <= 12) {
    n += 1;
    $('.form-group').hide();
    $(`.q${n}`).show();
  }
  else {
    n += 1;
    $('.form-group').hide();
    $('#next-question').hide();
    $(`.q${n}`).show();
    $('.btn-success').show();
  };
});
